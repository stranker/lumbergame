script/source = "extends CanvasLayer

export (NodePath) var wood_count
export (NodePath) var gold_count
export (PackedScene) var hit_scene

func _ready():
	GameManager.wood_ui_pos = $UpperPanel/Wood/Texture.rect_global_position
	GameManager.middle_panel= $MiddlePanel
	GameManager.connect('on_wood_change',self,'on_wooden_log_ui')
	pass

func _on_GameScene_tree_down(trees_chopped):
	$UpperPanel/Trees/Count.text = str(trees_chopped)
	pass # Replace with function body.

func on_tree_chopped(health):
	$UpperPanel/TreeHealth/Bar.value = health

func _on_GameScene_new_tree(tree):
	$UpperPanel/TreeHealth/Bar.max_value = tree.health
	$UpperPanel/TreeHealth/Bar.value = tree.health
	pass # Replace with function body.

func spawn_hit(pos : Vector2):
	var hit = hit_scene.instance()
	hit.rect_position = pos
	$MiddlePanel/HitMarkers.add_child(hit)
	pass

func on_wooden_log_ui(wood):
	if $UpperPanel/Wood/Anim.is_playing():
		$UpperPanel/Wood/Anim.stop()
	$UpperPanel/Wood/Anim.play('Increase')
	update_wooden_count()
	pass

func update_wooden_count():
	get_node(wood_count).text = str(GameManager.wood_count)
	pass

func update_gold_count():
	get_node(gold_count).text = str(GameManager.gold_count)
	pass

func update_currency_count():
	update_wooden_count()
	update_gold_count()
	pass"

