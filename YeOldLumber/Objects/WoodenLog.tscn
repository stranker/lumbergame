	new_mat.flags_transparent = true
	$WoodenLog.material_override = new_mat
	$Fade.interpolate_property(new_mat,'albedo_color', Color.white,
	Color(1,1,1,0), 0.5, Tween.TRANS_LINEAR, Tween.EASE_OUT, 0.3)
	$Fade.start()
	pass


func _on_Tween_tween_all_completed():
	spawn_pop()
	call_deferred('queue_free')
	pass # Replace with function body.

func _on_Timer_timeout():
	transparency()
	pass # Replace with function body.

func spawn_pop():
	var pop = wooden_pop.instance()
	pop.set_wood_count(wood)
	GameManager.middle_panel.add_child(pop)
	GameManager.set_rect_on_screen(pop, translation)
	transparency()
	pass"

